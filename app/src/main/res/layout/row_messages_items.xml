<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/responseTv"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/response_bg"
        android:elevation="3dp"
        android:padding="12sp"
        android:visibility="visible"
        android:text="Messages Will be displayed herehksk Messages Will be displayed here"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/senderTv"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/responseTv"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/sender_bg"
        android:elevation="3dp"
        android:padding="12sp"
        android:visibility="visible"
        android:text="Messages Will be displayed herehksk Messages Will be displayed here"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageIv"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"/>

</RelativeLayout>